{
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": ["prettier", "airbnb"],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "plugins": ["prettier"],
  "rules": {
    "no-underscore-dangle": ["off"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ]
  }
}
